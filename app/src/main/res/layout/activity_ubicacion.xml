<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="0.06"
        android:background="#009739"
        android:weightSum="1"
        android:id="@+id/linear">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Nombre de la Ubicacion"
            android:id="@+id/nombre_ubicacion"
            android:layout_weight="0.57"
            android:textSize="16dip"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical" />
    </LinearLayout>


    <TextView android:id="@+id/detalle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Calzada Cortez No. 1477-7. Col. Independencia Ensenada Baja California"
        android:textColor="@color/black"
        android:textSize="16dip"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/linear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp" />

    <TextView android:id="@+id/distanciaMts"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Distancia: 300 mts."
        android:textColor="@color/black"
        android:textSize="16dip"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/detalle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp" />

    <ImageView

        android:id="@+id/imagenUbicacion"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/distanciaMts"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_regresar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="0dp"
        android:background="@color/black"
        android:text="Regresar"
        android:textColor="@color/white"
        android:layout_below="@+id/imagenUbicacion"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:textAllCaps="false"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp" />



</RelativeLayout>
